@model IEnumerable<ExpenseTracker.Models.Expense>

@{
    ViewData["Title"] = "ExpenseTracker Expenses";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4"><i class="bi bi-wallet2 me-2"></i> Expense Summary - ExpenseTracker</h2>

    <div class="card shadow-lg">
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Description</th>
                        <th>Amount (Rs.)</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(e => e.Category == "ExpenseTracker"))
                    {
                        <tr>
                            <td class="fw-semibold">@item.Description</td>
                            <td class="text-success fw-bold">@item.Amount.ToString("N2")</td>
                            <td>
                                <span class="badge bg-primary">@item.Category</span>
                            </td>
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
